{% extends 'base.html.twig' %}

{% block title %}Asociado index{% endblock %}

{% block principal %}
    <h1>Asociado index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Logo</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for asociado in asociados %}
            <tr>
                <td>{{ asociado.id }}</td>
                <td><img src="{{ asset(asociado.getUrl()) }}" alt="{{ asociado.descripcion }}" title="{{ asociado.descripcion }}" width="50px"></td>
                <td>{{ asociado.nombre }}</td>
                <td>{{ asociado.descripcion }}</td>
                <td>
                    <a href="{{ path('app_asociado_show', {'id': asociado.id}) }}">show</a>
                    <a href="{{ path('app_asociado_edit', {'id': asociado.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_asociado_new') }}">Create new</a>
{% endblock %}
